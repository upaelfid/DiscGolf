<body ontouchmove="BlockMove(event);">
    <div id="page">
        <div id="header">
            <a href="#menu"></a>
            Bare Bones
        </div>
        <nav id="menu">
            <ul style="text-align: left;">
                <li>@Html.ActionLink("Cards", "Index", "Card")</li>
                <li>@Html.ActionLink("Top Cards", "HistoryCards", "Home")</li>
                <li>@Html.ActionLink("Active Cards", "Index", "Home")</li>
                <li>@Html.ActionLink("Create Card", "Create", "Card")</li>


                <li>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                </li>
                <li><a href="mailto:upaelfid@gmail.com?subject=Disc Golf Card Suggestions&body=Could you add or change the following:">
                    Suggestions</a></li>
                <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                </li>
                <li>@if (Request.IsAuthenticated)
                    {
                    <text>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
<li> <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                    }
                    </text>
                    }
                    else
                    {@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })}
                </li>
            </ul>
        </nav>
        @RenderSection("featured", required: false)
        <section class="main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
