<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Bare Bones</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

        @* iOS specific meta tags *@
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="viewport" content="width=device-width, user-scalable=no">
        <meta name="format-detection" content="telephone=no">

        @* iOS splash screen*@
        <link href="/bob-dobbs-splash.png"
            media="(device-width: 320px) and (device-height: 568px)
                 and (-webkit-device-pixel-ratio: 2)"
            rel="apple-touch-startup-image">

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body id="wrapper">
        <header>
            <div >
                <div class="float-left">
                    <p class="site-title">
                        <a href="@Url.Action("Index", "Home")" >             
                       Bare Bones Golf Card</a>
                    </p>
                </div>
                <div>
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li class="btn" id="wrapper" style="clear:right; float:left; width:100%; height:2em;">@Html.ActionLink("Leader Board", "Index", "Home",null, new{@class="btn", @style="border:none;"})</li>
                           @* <li>@Html.ActionLink("About", "About", "Home")</li
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                            <li class="btn" style="clear:left; float:left; width:100%; height:2em; margin-bottom:.1px;">@Html.ActionLink("Score Cards", "Index", "Card",null, new{@class="btn", @style="border:none;"})</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
@*        <div>
            @Html.Action("LeadingScore", "Cards")
        </div>*@
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Disc Golf Score Card</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
